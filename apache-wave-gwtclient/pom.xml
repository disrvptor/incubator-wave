			<exclusions>
				<exclusion>
					<groupId>org.hamcrest</groupId>
					<artifactId>hamcrest-core</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.google.inject.extensions</groupId>
			<artifactId>guice-servlet</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest-all</artifactId>
			<version>1.2</version>
		</dependency>
		<dependency>
			<groupId>javax.jdo</groupId>
			<artifactId>jdo2-api</artifactId>
			<version>2.2</version>
			<exclusions>
				<exclusion>
					<groupId>org.apache.ant</groupId>
					<artifactId>ant</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.apache.lucene</groupId>
			<artifactId>lucene-core</artifactId>
			<version>3.5.0</version>
		</dependency>
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
			<version>1.2.2</version>
		</dependency>
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient</artifactId>
			<version>3.1</version>
		</dependency>
		<dependency>
			<groupId>org.atmosphere</groupId>
			<artifactId>atmosphere-guice</artifactId>
			<version>0.8.3</version>
			<exclusions>
				<!-- Defined transitively through org.apache.wave:apache-wave-server -->
				<exclusion>
					<groupId>asm</groupId>
					<artifactId>asm</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-servlet</artifactId>
			<version>9.1.1.v20140108</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-servlets</artifactId>
			<version>9.1.1.v20140108</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.jetty</groupId>
			<artifactId>jetty-webapp</artifactId>
			<version>9.1.1.v20140108</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>dist</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>

			<dependencies>
				<dependency>
					<groupId>org.slf4j</groupId>
					<artifactId>slf4j-simple</artifactId>
					<version>1.6.1</version>
				</dependency>
				<dependency>
					<groupId>org.ogce</groupId>
					<artifactId>xpp3</artifactId>
					<version>1.1.6</version>
				</dependency>
			</dependencies>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-shade-plugin</artifactId>
						<version>2.3</version>
						<configuration>
							<transformers>
								<transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<mainClass>org.waveprotocol.box.server.ServerMain</mainClass>
								</transformer>
							</transformers>
							<artifactSet>
								<excludes>
									<!--exclude>commons-collections:commons-collections</exclude-->
									<!--exclude>javax.servlet:javax.servlet-api</exclude-->
									<!--exclude>com.google.protobuf:protobuf-java</exclude-->
									<exclude>org.json:json</exclude>
									<exclude>org.hamcrest:hamcrest-core:*</exclude>
								</excludes>
							</artifactSet>
							<filters>
								<!--filter>
									<artifact>com.google.protobuf:protobuf-java</artifact>
									<excludes>
										<exclude>com/google/protobuf/DescriptorProtos*</exclude>
									</excludes>
								</filter-->
								<filter>
									<artifact>com.google.gwt:gwt-user</artifact>
									<excludes>
										<exclude>javax/servlet/**</exclude>
									</excludes>
								</filter>
								<filter>
									<artifact>junit:junit</artifact>
									<excludes>
										<exclude>org/hamcrest/**</exclude>
									</excludes>
								</filter>
								<filter>
									<artifact>org.mockito:mockito-all</artifact>
									<excludes>
										<exclude>org/hamcrest/**</exclude>
									</excludes>
								</filter>
								<filter>
									<artifact>org.jivesoftware:whack</artifact>
									<excludes>
										<exclude>org/xmpp/packet/**</exclude>
										<exclude>org/xmpp/muc/**</exclude>
										<exclude>org/jivesoftware/util/**</exclude>
										<exclude>org/xmpp/component/Component**</exclude>
										<exclude>org/xmpp/component/ComponentException**</exclude>
										<exclude>org/xmpp/forms/**</exclude>
									</excludes>
								</filter>
							</filters>
						</configuration>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>shade</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
